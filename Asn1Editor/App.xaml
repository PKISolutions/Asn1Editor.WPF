<Application x:Class="SysadminsLV.Asn1Editor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:SysadminsLV.WPF.OfficeTheme.Controls;assembly=Wpf.OfficeTheme">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Wpf.OfficeTheme;component/UI/OfficeTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
            <Style TargetType="{x:Type ctrl:BindableRichTextBox}" BasedOn="{StaticResource {x:Type RichTextBox}}"/>
            <Style x:Key="AboutDialogStyle" TargetType="Window">
                <Setter Property="Height" Value="Auto" />
                <Setter Property="Width" Value="500" />
                <Setter Property="ShowInTaskbar" Value="False" />
                <Setter Property="ResizeMode" Value="NoResize" />
                <Setter Property="WindowStyle" Value="SingleBorderWindow" />
                <Setter Property="SizeToContent" Value="Height" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
